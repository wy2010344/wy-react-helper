echo "🚀 Running pre-commit checks for wy-react-helper workspace..."

# 检查子包变更并运行对应的 lint-staged
if git diff --cached --name-only | grep "base/" > /dev/null; then
  echo "📦 Running lint-staged for wy-react-helper base package..."
  cd base
  npx lint-staged
  pnpm run type-check
  cd ..
fi

if git diff --cached --name-only | grep "dom/" > /dev/null; then
  echo "📦 Running lint-staged for wy-react-dom-helper package..."
  cd dom
  npx lint-staged
  pnpm run type-check
  cd ..
fi

if git diff --cached --name-only | grep "native/" > /dev/null; then
  echo "📦 Running lint-staged for wy-react-native package..."
  cd native
  npx lint-staged
  pnpm run type-check
  cd ..
fi

echo "✅ Pre-commit checks completed!"